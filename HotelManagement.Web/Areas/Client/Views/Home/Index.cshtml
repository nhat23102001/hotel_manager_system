<!-- Rooms Section Start -->
<div class="location-house">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-8">
                <!-- Section Title -->
                <div class="section-tittle mb-50">
                    <h2>Phòng của chúng tôi</h2>
                    <p>Chúng tôi cung cấp các loại phòng hạng sang với dịch vụ tốt nhất.</p>
                    <a asp-area="Client" asp-controller="Rooms" asp-action="Index" class="btn btn-primary mt-3">Xem tất cả phòng →</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="rows">
            <div class="location-active owl-carousel">
                @if (Model != null && Model.Any())
                {
                    @foreach (var room in Model)
                    {
                        <div class="col-lg-12">
                            <!-- Single Room -->
                            <a asp-area="Client" asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" style="text-decoration: none; color: inherit;">
                                <div class="single-location">
                                    @if (!string.IsNullOrWhiteSpace(room.ImageUrl) && !string.IsNullOrWhiteSpace(room.ImageFileName))
                                    {
                                        <img src="@Url.Action("GetImage", "Image", new { area = "Admin", filename = room.ImageFileName })" alt="@room.RoomName" style="height: 400px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div style="height: 400px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-image" style="font-size: 60px; color: #999;"></i>
                                        </div>
                                    }
                                    <div class="location-contents">
                                        <h3 style="color: white;">@room.RoomName</h3>
                                        <p>Tối đa: @room.MaxPeople người</p>
                                        <div class="price">
                                            <span>Từ <span>@room.PricePerNight.ToString("N0") VNĐ</span>/đêm</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-12">
                        <div class="alert alert-info text-center">
                            Chưa có phòng nào có sẵn.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Rooms Section End -->




