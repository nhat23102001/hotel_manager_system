@model HotelManagement.Web.DTOs.LoginRequestDto
@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["BodyClass"] = "auth-body";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<!-- Hero Area Start-->
<div class="slider-area hero-bg1 hero-overly">
    <div class="single-slider slider-height3 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-11">
                    <div class="hero-caption hero-caption3">
                        <h1>Đăng nhập</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Hero Area End-->

<!-- Auth Form Section -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow border-0 auth-form-card">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="auth-icon mb-3">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <h4 class="fw-bold mb-1">Đăng nhập tài khoản</h4>
                        <p class="text-muted small">Nhập thông tin để tiếp tục</p>
                    </div>

                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["LoginError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["RegisterSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["RegisterSuccess"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ForgotSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["ForgotSuccess"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-area="Client" asp-controller="Auth" asp-action="Login" method="post">
                        <div class="mb-4">
                            <label asp-for="Username" class="form-label fw-semibold"><i class="fas fa-user text-primary me-1"></i> Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập" autocomplete="username" />
                            <span asp-validation-for="Username" class="text-danger d-block mt-1 small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-semibold"><i class="fas fa-lock text-primary me-1"></i> Mật khẩu</label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger d-block mt-1 small"></span>
                        </div>
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label small">Ghi nhớ đăng nhập</label>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3 fw-semibold">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                            </button>
                        </div>
                    </form>

                    <div class="divider my-4">
                        <span class="text-muted small">hoặc</span>
                    </div>

                    <div class="text-center">
                        <p class="mb-2 small">
                            <a asp-area="Client" asp-controller="Auth" asp-action="ForgotPassword" class="text-decoration-none text-primary fw-semibold">
                                <i class="fas fa-key me-1"></i>Quên mật khẩu?
                            </a>
                        </p>
                        <p class="mb-0 small text-muted">
                            Chưa có tài khoản? 
                            <a asp-area="Client" asp-controller="Auth" asp-action="Register" class="text-decoration-none text-primary fw-semibold">
                                <i class="fas fa-user-plus me-1"></i>Đăng ký ngay
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
