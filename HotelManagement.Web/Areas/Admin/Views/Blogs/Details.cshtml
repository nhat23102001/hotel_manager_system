@model HotelManagement.Web.DTOs.BlogDto
@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Chi tiết bài viết</h4>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-8">
                        <label class="form-label text-muted">Tiêu đề</label>
                        <p class="fw-bold">@Model.Title</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Trạng thái</label>
                        <p>
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-success">Đã xuất bản</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nháp</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Slug</label>
                        <p class="fw-bold">@(string.IsNullOrWhiteSpace(Model.Slug) ? "-" : Model.Slug)</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Tác giả</label>
                        <p class="fw-bold">@(Model.AuthorName ?? "-")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Ngày xuất bản</label>
                        <p class="fw-bold">@((Model.PublishedAt ?? Model.CreatedAt).ToString("dd/MM/yyyy HH:mm"))</p>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted">Tóm tắt</label>
                        <p class="fw-bold">@(string.IsNullOrWhiteSpace(Model.Summary) ? "-" : Model.Summary)</p>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted">Ảnh đại diện</label>
                        @if (!string.IsNullOrWhiteSpace(Model.Thumbnail) && !string.IsNullOrWhiteSpace(Model.ThumbnailFileName))
                        {
                            <div class="mt-2">
                                <img src="@Url.Action("GetImage", "Image", new { filename = Model.ThumbnailFileName })" alt="Thumbnail" class="img-thumbnail" style="max-width: 400px; max-height: 250px;" />
                            </div>
                        }
                        else
                        {
                            <p class="fw-bold">-</p>
                        }
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted">Nội dung</label>
                        <div class="border rounded p-3" style="white-space: pre-wrap;">@Model.Content</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
