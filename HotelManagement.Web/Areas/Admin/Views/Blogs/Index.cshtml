@model IEnumerable<HotelManagement.Web.DTOs.BlogDto>
@{
    ViewData["Title"] = "Tin tức";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Tin tức</h4>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm bài viết
        </a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tìm theo tiêu đề/tóm tắt</label>
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Nhập tiêu đề hoặc tóm tắt" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select name="isPublished" class="form-select">
                    <option value="">-- Tất cả --</option>
                    <option value="true" selected="@(ViewBag.IsPublished != null && (bool)ViewBag.IsPublished)">Đã xuất bản</option>
                    <option value="false" selected="@(ViewBag.IsPublished != null && !(bool)ViewBag.IsPublished)">Nháp</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Lọc</button>
                <a asp-action="Index" class="btn btn-secondary">Xóa</a>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Tác giả</th>
                        <th>Ngày xuất bản</th>
                        <th>Trạng thái</th>
                        <th style="width: 220px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Title</strong><br />
                                <small class="text-muted">@item.Summary</small>
                            </td>
                            <td>@(item.AuthorName ?? "-")</td>
                            <td>@((item.PublishedAt ?? item.CreatedAt).ToString("dd/MM/yyyy HH:mm"))</td>
                            <td>
                                @if (item.IsPublished)
                                {
                                    <span class="badge bg-success">Đã xuất bản</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Nháp</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id" data-name="@item.Title">Xóa</button>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không tìm thấy bài viết nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa bài viết <strong id="deleteItemName"></strong> không?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');

            document.getElementById('deleteItemName').textContent = name;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + id;
        });
    </script>
}
