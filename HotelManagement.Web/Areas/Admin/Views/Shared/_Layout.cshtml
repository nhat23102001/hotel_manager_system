<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | Hotel Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Hotel Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav" aria-controls="adminNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="adminNav">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Quản lý phòng
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="RoomTypes" asp-action="Index">Loại phòng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Rooms" asp-action="Index">Phòng</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Bookings" asp-action="Index">Đặt phòng</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Dịch vụ
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="ServiceTypes" asp-action="Index">Loại dịch vụ</a></li>
                                    <li><a class="dropdown-item" asp-controller="Services" asp-action="Index">Dịch vụ</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Blogs" asp-action="Index">Tin tức</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Contacts" asp-action="Index">Liên hệ</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center gap-3">
                            <span class="text-light small mb-0">Chào mừng, @User.Identity.Name</span>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-light btn-sm" asp-area="Admin" asp-controller="Accounts" asp-action="Index">Quản lý tài khoản</a>
                            }
                            <a class="btn btn-outline-light btn-sm" asp-area="Admin" asp-controller="Profile" asp-action="Index">Hồ sơ</a>
                            <form class="d-flex" asp-area="Admin" asp-controller="Auth" asp-action="Logout" method="post">
                                <button class="btn btn-outline-light btn-sm" type="submit">Đăng xuất</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="ms-auto d-flex align-items-center">
                            <a class="btn btn-outline-light" asp-area="Admin" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
