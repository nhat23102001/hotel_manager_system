@model HotelManagement.Web.DTOs.RoomDto
@{
    ViewData["Title"] = "Chi tiết phòng";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h5 class="mb-4">Chi tiết phòng</h5>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Mã phòng</label>
                        <p class="fw-bold">@Model.RoomCode</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Tên phòng</label>
                        <p class="fw-bold">@(Model.RoomName ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Loại phòng</label>
                        <p class="fw-bold">@Model.RoomType</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Giá theo đêm</label>
                        <p class="fw-bold">@Model.PricePerNight.ToString("N0") VNĐ</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Số người tối đa</label>
                        <p class="fw-bold">@(Model.MaxPeople?.ToString() ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Trạng thái</label>
                        <p>
                            @if (Model.Status == "Available")
                            {
                                <span class="badge bg-success">Khả dụng</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@Model.Status</span>
                            }
                            
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </p>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl) && !string.IsNullOrWhiteSpace(Model.ImageFileName))
                    {
                        <div class="col-12">
                            <label class="form-label text-muted">Hình ảnh</label>
                            <div>
                                <img src="@Url.Action("GetImage", "Image", new { area = "Admin", filename = Model.ImageFileName })" alt="@Model.RoomName" class="img-fluid rounded" style="max-height: 300px; width: auto;" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-12">
                            <p class="text-muted"><em>Chưa có hình ảnh</em></p>
                        </div>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="col-12">
                            <label class="form-label text-muted">Mô tả</label>
                            <p>@Model.Description</p>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
