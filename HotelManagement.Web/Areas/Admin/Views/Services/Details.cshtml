@model HotelManagement.Web.DTOs.ServiceDto
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Chi tiết dịch vụ</h4>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Tên dịch vụ</label>
                        <p class="fw-bold">@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Loại dịch vụ</label>
                        <p class="fw-bold">@(Model.ServiceTypeName ?? "-")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Đơn giá</label>
                        <p class="fw-bold">@Model.UnitPrice.ToString("N0") đ</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Đơn vị</label>
                        <p class="fw-bold">@(string.IsNullOrWhiteSpace(Model.Unit) ? "-" : Model.Unit)</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Trạng thái</label>
                        <p>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Khóa</span>
                            }
                        </p>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted">Mô tả</label>
                        <p class="fw-bold">@(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
